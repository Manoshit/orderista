  <% include partials/header %>

  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <div class="card " id="hello" style=" margin: 0 auto; float: none; margin-bottom: 10px;" >
        <div class="card-body">
          
          <form method="POST" action="/change_user_profile">
            <div class="md-form mb-5">
              <i class="fas fa-user prefix grey-text"></i>
              <label >Your name</label>
              <input type="text" id="orangeForm-name" class="form-control " name="name" value="<%= locals.name%>" required >

            </div>
            <div class="md-form mb-5">
            <i class="fas fa-address-card"></i>
              <label >Your address</label>
              <input type="text" id="orangeForm-name" class="form-control " name="address" value="<%= locals.address%>" required>

            </div>
            <div class="md-form mb-5">
              <i class="fas fa-envelope prefix grey-text"></i>
              <label >Your email</label>
              <input type="email" id="orangeForm-email" class="form-control " name="username"  value="<%= locals.username%>" readonly>
              
            </div>

          
            

          </form>

        </div>
      </div>
    </div>
  </div>
  <div  class="bg-dark">
<div class="container">
    <div class="row" style="padding: 20px;" >
      <div class="col-md-12" >
        <img   class=" img-fluid" src="images/benefit.png">

      </div>
      
    </div>
  </div>
</div>
